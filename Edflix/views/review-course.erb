<main>

	<% if $review %>
		<div class="errors">
			<% $review.errors.each do |name, reasons| %>
				<% reasons.each do |reason| %>
					<p><%= name + " " + reason %></p>
				<% end %>
			<% end %>
		</div>
	<% end %>

	<form action="/review-course" method="POST">
		<label for="rating">Rating (1-100)</label>
		<input type="number" id="rating" name="rating" min=1 max=100>
		<label for="description">Description of review</label>
		<input type="text" id="description" name="description">
		
		<input type="hidden" name="course_id" value="<%= h params[:id] %>">
		<input type="submit" value="Submit Review">
	</form>
</main>