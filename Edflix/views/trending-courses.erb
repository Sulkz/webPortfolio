
<main>
    <h2>Trending courses</h2>
    <div id="courses">
        <% for course in @courses%>
            <div class="card" id="course">  			
                    <h2 align='center' class="card-title">
                        <a href="/course?id=<%= h course.id %>"><%= h course[:name] %></a>
                    </h2>
                    <h3 align='center' class="card-content"><%= h course[:description] %></h3>
                    <p align='left' id="ranking"><%= h course.ranking.name %></p>
                    <p align='right'>Â£<%= h course.formatted_price %></p>    
                    <p align='right' id="is-trusted"><%= h course.trusted == 1 ? "Trusted course" : "" %> 
            </div>
        <%end%>
    </div>
</main>

<style>

  :root{
    --light: white;
    --dark: black;
    --lightneutral: rgb(178, 226, 238);
    --neutral: #fff0d4;
    --neutral2: #6c584c;
    --darkneutral :#6e9913;
    --big-font-size: 2.5em;
    --medium-font-size: 1rem;
    --input-padding: 10px 25px;
    --border-radius: 0.3rem;
    --margin-bottom: 5px;
    --margin-top: 10px;
    --border: 2px solid black;
    --padding: 1.5rem;
  }

  #courses {
    background-color var(--lightneutral);
    position: absolute;
    margin-top: 2rem;
    margin-left: 5%;
    margin-right: 5%;
    width: 100%;
    height: 100%;
  }

  .card {
    color: var(--dark);
    background-color: var(--lightneutral);
    background-size: cover;
    padding: 5px 10px;
    max-width: 85rem;
    max-height: 20rem;
    margin-bottom: 2rem;
    border-radius: 0.5rem;
    overflow: hidden;
    transition: transform 500ms ease;
  }


  .card:hover, .card:focus-within {
    transform: scale(1.1);
  }


  .card-content{
    color: var(--dark);
    padding: var(--padding);
    background: linear-gradient( hsl(0, 0%, 0% / 0), 
    hsl(0, 0%, 0% / 6) 20%,
    hsl(0, 0%, 0% / 1)
    );
  }



  .card-title {
    color: var(--dark);
    position: relative;
    width: max-content;
  }


  .card-title::after {
    content: '';
    position: absolute;
    height: 0.3rem;
    background: var(--darkneutral);
    width: calc( 100% + var(--padding));
    left: calc(var(--padding) * -1);
    bottom: -0.2rem;
    transform-origin: left;
    transition: transform 500ms ease;
  }


  .card:hover .card-title::after,
  .card:focus-within .card-title::after {
    transform: scaleX(1);
  }

  .card-body {
    color: rgb(0, 0, 0);
  }

  @media (hover) {

    .card:hover .card-content, .card:focus-within .card-content {
        transform: translateY(0);
        transition-delay: 500ms;
    }

    .card:focus-within .card-content {
      transition-duration: 500ms;
    }

    .card-content > *:not(.card-title) {
      opacity: 0;
      transition: opacity 500ms linear;
    }


    .card:hover .card-content > *:not(.card-title), 
    .card:focus-within .card-content > *:not(.card-title) {
      opacity: 1;
      transition-delay: 1000ms;
    }

    .card-title::after {
      transform: scaleX(0);
    }

  }
</style>